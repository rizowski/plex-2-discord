{
  "name": "plex-2-discord",
  "version": "1.0.0",
  "description": "Plex events to Discord Webhooks",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "local": "nodemon .",
    "build": "babel src -d build -s inline",
    "mocha": "NODE_ENV=${NODE_ENV:-test} mocha",
    "test": "npm run mocha -- --opts ./test/mocha.opts -r @babel/core -r @babel/register",
    "lint": "esw --fix --quiet"
  },
  "engines": {
    "node": "<9 >8.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rizowski/plex-2-discord.git"
  },
  "keywords": [
    "discord",
    "plex"
  ],
  "author": "Colten Rouska",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizowski/plex-2-discord/issues"
  },
  "homepage": "https://github.com/rizowski/plex-2-discord#readme",
  "xo": {
    "prettier": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,css,md,json}": [
      "prettier --write --print-width=160",
      "git add"
    ],
    "*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "dependencies": {
    "axios": "^0.18.0",
    "blipp": "^2.3.0",
    "boom": "^7.1.1",
    "config": "^2.0.1",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.6.2",
    "hapi-router": "^3.5.0",
    "joi": "^13.1.2",
    "lodash.get": "^4.4.2",
    "movie-art": "^1.0.6",
    "tmdb": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "chai": "^4.1.2",
    "eslint": "^5.4.0",
    "form-data": "^2.3.2",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.12.1",
    "prettier": "^1.14.2",
    "source-map-support": "^0.5.0",
    "xo": "^0.22.0"
  }
}
